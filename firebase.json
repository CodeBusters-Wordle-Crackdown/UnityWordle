{
  "hosting": {
    "site": "unity-crackdown",
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.@(data|framework.js|loader.js|wasm)",
        "headers": [
          {
            "key": "Content-Encoding",
            "value": "gzip"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/Build/**",
        "destination": "/Build/"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
